<odoo>
    <data>

        <!-- Inherit the product.template form view to add media URL fields -->
        <record id="view_product_template_form_inherit_media_url" model="ir.ui.view">
            <field name="name">product.template.form.inherit.media.url</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='image_1920']" position="after">
                    <group>
                        <field name="is_media_url_active"/>
                        <field name="media_url" widget="url" placeholder="Enter the external media URL"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Add a view for the error log in the backend -->
        <record id="view_product_media_url_error_log" model="ir.ui.view">
            <field name="name">product.media.url.error.log</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="media_url"/>
                    <field name="is_media_url_active"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>