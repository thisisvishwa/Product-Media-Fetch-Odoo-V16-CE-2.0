<odoo>
    <data>

        <!-- Media URL Configuration Form View -->
        <record id="product_media_url_config_form_view" model="ir.ui.view">
            <field name="name">product.media.url.config.form</field>
            <field name="model">product.media.url.config</field>
            <field name="arch" type="xml">
                <form string="Media URL Configuration">
                    <sheet>
                        <group>
                            <field name="media_url"/>
                            <field name="is_media_url_active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Media URL Configuration Action -->
        <record id="action_product_media_url_config" model="ir.actions.act_window">
            <field name="name">Media URL Configuration</field>
            <field name="res_model">product.media.url.config</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_media_url_config_form_view"/>
        </record>

        <!-- Media URL Configuration Menu Item -->
        <menuitem id="menu_product_media_url_config"
                  name="Media URL Configuration"
                  action="action_product_media_url_config"
                  parent="base.menu_custom"
                  sequence="10"/>

    </data>
</odoo>